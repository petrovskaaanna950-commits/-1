#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int a;
	double b;
	double c;
	cout << "1) + - складывать" << endl;
	cout << "2) - - вычитать" << endl;
	cout << "3) * - умножать" << endl;
	cout << "4) / - делить" << endl;
	cout << "5) % - остаток от деления" << endl;
	cin >> a;
	if (a == 1) {
		cout << "Введите первое число:";
		cin >> b;
		cout << "Введите второе число:";
		cin >> c;
		cout << "Результат: " << b << "+" << c << "=" << b + c;

	}
	else if (a == 2) {
		cout << "Введите первое число:";
		cin >> b;
		cout << "Введите второе число:";
		cin >> c;
		cout << "Результат: " << b << "-" << c << "=" << b - c;

	}
	else if (a == 3) {
		cout << "Введите первое число:";
		cin >> b;
		cout << "Введите второе число:";
		cin >> c;
		cout << "Результат: " << b << "*" << c << "=" << b * c;
	}
	else if (a == 4) {
		cout << "Введите первое число:";
		cin >> b;
		cout << "Введите второе число:";
		cin >> c;
		if (c == 0) {
			cout << "Ошибка!На ноль делить нельзя";
			return 0;
		}
		cout << "Результат: " << b << "/" << c << "=" << b / c;
	}
	else if (a == 5) {
		int d;
		int  r;
		cout << "Введите первое число:";
		cin >> d;
		cout << "Введите второе число:";
		cin >> r;
		if (r == 0) {
			cout << "Ошибка!На ноль делить нельзя!";
			return 0;
		}
		cout << "Результат: " << d << "%" << r << "=" << d % r;
	}
}
