#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int number;
	cout << "[ - ] Программа 'Времена года'" << endl;
	cout << "" << endl;
	cout << "[ 1 ] Лето" << endl;
	cout << "[ 2 ] Осень" << endl;
	cout << "[ 3 ] Зима" << endl;
	cout << "[ 4 ] Весна" << endl;

	cout << "" << endl;
	cout << "[-] Введите значение :" << endl;
	cin >> number;
	if (number == 1) {
		cout << "Сейчас лето. Жарко, можно носить лёгкую одежду и брать солнцезащитные очки." << endl;
	}
	else if (number == 2) {
		cout << "Сейчас осень следует одеваться тепло и взять с собой зонт." << endl;
	}
	else if (number == 3) {
		cout << "Сейчас зима. Наденьте тёплую одежду, шапку и перчатки." << endl;
	}
	else if (number == 4) {
		cout << "Сейчас весна. Погода переменчивая, возьмите лёгкую куртку и зонт." << endl;
	}
	else {
		cout << "Такого времени года нет. Введите значение от 1 до 4." << endl;
	}
	return 0;
}

